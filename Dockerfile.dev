# Multi-stage build for minimal image size with audio conversion optimizations
# Platform: linux/amd64 for App Runner compatibility
FROM node:24-alpine AS deps
WORKDIR /app

# Install Sharp dependencies and audio processing tools
RUN apk add --no-cache \
    vips-dev \
    build-base \
    python3 \
    make \
    g++ \
    ffmpeg-dev \
    lame-dev \
    opus-dev \
    libvorbis-dev

COPY package*.json ./
RUN npm ci --only=production && npm rebuild sharp

FROM node:24-alpine AS builder
WORKDIR /app

# Install Sharp dependencies and audio processing tools
RUN apk add --no-cache \
    vips-dev \
    build-base \
    python3 \
    make \
    g++ \
    ffmpeg-dev \
    lame-dev \
    opus-dev \
    libvorbis-dev

COPY package*.json ./
RUN npm ci && npm rebuild sharp
COPY . .
RUN npm run build

FROM node:24-alpine AS runner
WORKDIR /app

# Install runtime dependencies including Sharp requirements and optimized FFmpeg
RUN apk add --no-cache \
    vips \
    vips-cpp \
    glib \
    expat \
    ffmpeg \
    lame \
    opus \
    libvorbis \
    libtheora \
    x264 \
    x265 && \
    echo "FFmpeg installed at: $(which ffmpeg)" && \
    ffmpeg -version && \
    ln -sf $(which ffmpeg) /usr/local/bin/ffmpeg && \
    chmod +x /usr/local/bin/ffmpeg

# Set FFmpeg path and audio conversion optimizations
ENV FFMPEG_PATH="/usr/local/bin/ffmpeg"
ENV PATH="/usr/local/bin:${PATH}"

# Audio conversion specific optimizations
ENV FFMPEG_THREADS="auto"
ENV FFMPEG_BUFFER_SIZE="64k"
ENV AUDIO_CONVERSION_TIMEOUT="300"

# Set Next.js server configuration
ENV NODE_OPTIONS="--max-http-header-size=16384 --max-old-space-size=2048"
ENV NEXT_SHARP_PATH="/app/node_modules/sharp"

# Increase body parser limit for large file uploads
ENV BODY_SIZE_LIMIT="500mb"

# App Runner specific optimizations
ENV NODE_ENV="production"
ENV HOSTNAME="0.0.0.0"
ENV PORT="3000"

# AWS service configuration for production
ENV AWS_REGION="us-east-1"
ENV FORCE_AWS_ENVIRONMENT="true"

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Create temp directory for audio processing with proper permissions
RUN mkdir -p /tmp/audio-processing && \
    chown nextjs:nodejs /tmp/audio-processing && \
    chmod 755 /tmp/audio-processing

# Copy built application
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static
COPY --from=builder --chown=nextjs:nodejs /app/node_modules ./node_modules

USER nextjs

EXPOSE 3000

# Health check for App Runner
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

CMD ["sh", "-c", "HOSTNAME=0.0.0.0 PORT=3000 node server.js"]